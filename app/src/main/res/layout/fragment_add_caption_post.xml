<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCaptionPostFragment">

    <RelativeLayout
        android:id="@+id/add_caption_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_arrow_back_black_24dp2"
            android:layout_centerVertical="true"
            android:id="@+id/add_caption_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="18sp"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:text="Share"
            android:fontFamily="@font/montbold"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/add_caption_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <com.synnapps.carouselview.CarouselView
        android:layout_below="@+id/add_caption_header"
        android:layout_centerHorizontal="true"
        android:id="@+id/add_caption_preview_img"
        android:src="@drawable/default_profile"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_caption"
        android:layout_margin="20dp"
        android:hint="Enter Caption"
        android:layout_below="@+id/add_caption_preview_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_caption_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter Payment Link"
        android:layout_below="@+id/tl_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_caption_payment_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:translationX="-100px"
        android:translationY="100px"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_message_sent_2"
        android:layout_width="200dp"
        android:layout_height="200dp" />


    <ImageView
        android:translationZ="-1dp"
        android:rotation="35"
        android:translationY="-120px"
        android:translationX="-120px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/fand"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <ImageView
        android:rotation="-45"
        android:translationY="100dp"
        android:translationX="100dp"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/rocket"
        android:layout_width="250dp"
        android:layout_height="250dp" />

</RelativeLayout>