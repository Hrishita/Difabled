<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="#fff"
        android:layout_height="match_parent"
        >
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:context=".BlindHomeActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tapidblind"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/cardobjectdetection"

                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView

                android:elevation="5dp"
                android:id="@+id/cardtextrec"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView

                android:id="@+id/post"

                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView

                android:id="@+id/latestmessage"

                android:elevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView

                android:id="@+id/sendlocation"

                android:elevation="5dp"
                android:layout_marginBottom="50dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp">

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>




    </ScrollView>
    <ImageView
        android:src="@drawable/fand"
        android:layout_width="120dp"
        android:translationZ="-1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:translationY="-12dp"
        android:rotation="90"
        android:layout_gravity="top|end"
        android:layout_height="120dp" />
    <ImageView
        android:src="@drawable/fand2"
        android:alpha="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationZ="-1dp"
        android:rotation="70"
        android:translationY="18dp"
        android:translationX="-18dp"
        android:layout_gravity="bottom"
        android:layout_height="120dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>