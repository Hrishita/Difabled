<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/pio_dialog_close"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close_black_24dp"
        android:scaleType="center"
        android:translationZ="100dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/pio_dialog"
        android:adjustViewBounds="true"
        android:layout_below="@id/pio_dialog_close"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_profile"
        android:maxHeight="400dp"
        android:maxWidth="400dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_pio_upload"
        android:theme="@style/DarkTextButton"
        android:text="Upload Image"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/pio_dialog"
        android:layout_width="match_parent"
        android:layout_height="65dp" />

    <Button
        android:id="@+id/btn_pio_remove"
        android:theme="@style/DarkTextButton"
        android:text="Remove Image"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/btn_pio_upload"
        android:layout_width="match_parent"
        android:layout_height="65dp" />

    </RelativeLayout>

</ScrollView>